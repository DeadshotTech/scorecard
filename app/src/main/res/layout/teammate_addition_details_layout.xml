<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="6"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/teammate_addition_details_player_jersey_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="45"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/teammate_addition_details_player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/teammate_addition_details_player_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="23"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/teammate_addition_details_delete_player"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/delete_icon"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dip"/>

    </LinearLayout>

</LinearLayout>
