<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TossActivity">

    <TextView
        android:id="@+id/toss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/coin_gold_color"
        android:padding="50dip"
        android:text="TOSS"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/playing_choice_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/toss_winner_preference_batting"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dip"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/main_theme_background_color"
            android:padding="10dip"
            android:src="@drawable/batting_icon" />

        <ImageView
            android:id="@+id/toss_winner_preference_baller"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dip"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/main_theme_background_color"
            android:padding="10dip"
            android:src="@drawable/balling_icon" />

    </LinearLayout>
</RelativeLayout>