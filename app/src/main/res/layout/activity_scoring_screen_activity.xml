<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dip">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/scoring_screen_batsman1_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player Name"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:weightSum="3">

                <TextView
                    android:id="@+id/scoring_screen_batsman1_runs"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="R: "
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_batsman1_balls"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="B: "
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_batsman1_strike_rate"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="S/R: "
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/scoring_screen_batsman2_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player Name"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:weightSum="3">

                <TextView
                    android:id="@+id/scoring_screen_batsman2_runs"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="R: "
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_batsman2_balls"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="B: "
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_batsman2_strike_rate"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="S/R: "
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/scoring_screen_bowler_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player Name"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:weightSum="3">

                <TextView
                    android:id="@+id/scoring_screen_bowler_runs_conceded"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="O: "
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_bowler_overs_bowled"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="W: "
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_bowler_wickets_taken"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="R/R: "
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginTop="50dip"
        android:background="@color/cardview_shadow_start_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2"
                android:background="@color/cardview_shadow_start_color">

                <TextView
                    android:id="@+id/scoring_screen_chooser_batsman1_name"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="Player Name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@color/cardview_dark_background"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_chooser_batsman2_name"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="Player Name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dip"
                android:paddingBottom="20dip"
                android:weightSum="4"
                android:background="@color/cardview_shadow_start_color">

                <TextView
                    android:id="@+id/scoring_screen_score_bold"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="BOLD"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_score_lbw"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="LBW"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_score_catch"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="CATCH"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_score_run_out"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="RUN OUT"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dip"
                android:paddingBottom="20dip"
                android:weightSum="4"
                android:background="@color/cardview_shadow_start_color">

                <TextView
                    android:id="@+id/scoring_screen_score_wide"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="WIDE"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_score_no"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_score_bye"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="BYE"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_score_lb"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="LB"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dip"
                android:paddingBottom="20dip"
                android:weightSum="7"
                android:background="@color/cardview_shadow_start_color">

                <TextView
                    android:id="@+id/scoring_screen_score_zero"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_score_one"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_score_two"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_score_three"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_score_four"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_score_five"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/scoring_screen_score_six"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

            <Button
                android:id="@+id/scoring_screen_score_record_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RECORD" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    
</LinearLayout>